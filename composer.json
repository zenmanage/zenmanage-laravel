{
    "name": "zenmanage/zenmanage-laravel",
    "description": "Zenmanage API SDK for Laravel",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Zenmanage",
            "email": "hello@zenmanage.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "zenmanage/zenmanage-php": "^3.0.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpunit/php-code-coverage": "^10.0",
        "phpstan/phpstan": "^1.10",
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Zenmanage\\Laravel\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Zenmanage\\Laravel\\ZenmanageServiceProvider"
            ]
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html coverage",
        "analyze": "phpstan analyse src tests --level=9",
        "format": "php-cs-fixer fix --allow-risky=yes",
        "format:check": "php-cs-fixer fix --dry-run --diff --allow-risky=yes"
    }
}
